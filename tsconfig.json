{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@simplish/client": ["./client"],
      "@simplish/components": ["./components"],
      "@simplish/hooks": ["./hooks"],
      "@simplish/server": ["./server"],
      "@simplish/types": ["./types"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es5"
  },
  "exclude": ["node_modules", ".next", ".vercel", ".vscode"],
  "include": ["*.d.ts", "**/*.ts", "**/*.tsx"]
}
